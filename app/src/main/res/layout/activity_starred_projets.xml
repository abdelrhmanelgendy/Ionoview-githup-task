<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".starredprojects.presentation.StarredProjectsActivity">

    <TextView
        android:id="@+id/starredProjectsActivity_TV_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/aclonica"
        android:text="@string/most_starred_projects"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/starredProjectsActivity_recyclerView_projects"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:nestedScrollingEnabled="true"

                tools:listitem="@layout/githup_project_element"
                app:layout_constraintBottom_toTopOf="@id/starredProjectsActivity_ProgressBar"
                app:layout_constraintTop_toBottomOf="@+id/starredProjectsActivity_TV_tittle" />


            <ProgressBar
                android:id="@+id/starredProjectsActivity_ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:indeterminateTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"

                android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>